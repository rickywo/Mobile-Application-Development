<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/material_frame"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pic_imageview"
        android:layout_width="@dimen/event_thumb_width"
        android:layout_height="@dimen/event_thumb_height"
        android:layout_marginRight="@dimen/event_thumb_margin_right"
        android:src="@mipmap/ic_face_black_24dp" />


    <TextView
        android:id="@+id/invitee_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="@dimen/title"
        android:textColor="@color/title"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pic_imageview"
        android:layout_toEndOf="@+id/pic_imageview" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/event_thumb_width"
        android:layout_height="@dimen/event_thumb_height"
        android:src="@mipmap/ic_turned_in_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>